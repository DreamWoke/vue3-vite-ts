{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    // "types": ["vite/client"],
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "Components/*":["./src/components/*"]
    },
  },
  
  "files":["./shim.d.ts"],
  "include": ["*.tsx","src/**/*.tsx","src/**/*.ts","src/**/*.d.ts","src/*.ts","src/*.vue","src/**/*.vue"],
  "exclude": ["/node_modules","vite.config.ts"]
}
